<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.BayuNurIndraJatiIrawan">

    <!-- Izin kamera -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- Features -->
    <uses-feature android:name="android.hardware.camera" android:required="false"/>
    <!-- Izin akses lokasi -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Rekomendasi Wisata"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RekomendasiWisata"
        tools:targetApi="31">

        <!-- Activity untuk menangani kamera -->
        <activity
            android:name=".Camera"
            android:exported="true"
            android:label="Kamera">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Activity untuk menangani peta (maps) -->
        <activity
            android:name=".Maps"
            android:exported="true"
            android:label="Peta">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Daftar activity lainnya -->
        <activity android:name=".About" />
        <activity android:name=".Kampoong" />
        <activity android:name=".GudegPawon" />
        <activity android:name=".Vihara" />
        <activity android:name=".Gereja" />
        <activity android:name=".Masjid" />
        <activity android:name=".WisataReligi" />
        <activity android:name=".WisataKuliner" />
        <activity android:name=".Pustaka" />
        <activity android:name=".KebunBinatang" />
        <activity android:name=".Museum" />
        <activity android:name=".WisataEdukasi" />
        <activity android:name=".GumukPasirParangkusumo" />
        <activity android:name=".GeoforestWatuPayung" />
        <activity android:name=".GunungMerapi" />
        <activity android:name=".PuncakBecici" />
        <activity android:name=".AirTerjun" />
        <activity android:name=".WisataAlam" />
        <activity android:name=".GuaKidang" />
        <activity android:name=".Alam" />
        <activity android:name=".MenuUtama" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
